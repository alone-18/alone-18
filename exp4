
#include <stdio.h>
#include <stdlib.h>
typedef struct Node {
    int data;             
    struct Node* left;     
    struct Node* right;    
} Node;
Node* createNode(int value) {
    Node* newNode = (Node*)malloc(sizeof(Node));
    if (newNode == NULL) {
        printf("Memory allocation failed\n");
        exit(1);
    }
    newNode->data = value;
    newNode->left = NULL;
    newNode->right = NULL;
     return newNode;
}

int main() {
    Node* root = createNode(10);          
    root->left = createNode(5);          
    root->right = createNode(15);       
    return 0;
}
